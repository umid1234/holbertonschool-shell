#!/usr/bin/env bash
# Script that writes its PID to /var/run/myscript.pid and reacts to signals
# shellcheck disable=SC2009

echo $$ > /var/run/myscript.pid

# receiving SIGTERM
trap 'echo "I hate the kill command"' SIGTERM

# When receiving SIGINT (Ctrl+C)
trap 'echo "Y U no love me?!"; rm -f /var/run/myscript.pid; exit' SIGINT

# When receiving SIGQUIT
trap 'rm -f /var/run/myscript.pid; exit' SIGQUIT

# Infinite loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done

