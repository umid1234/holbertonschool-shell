#!/usr/bin/env bash
# Script that writes its PID to /var/run/myscript.pid and handles signals

PIDFILE="/var/run/myscript.pid"
echo "$$" > "$PIDFILE"

# SIGINT (Ctrl+C)
trap 'echo "Y U no love me?!";' SIGINT

# SIGTERM (pkill/kill)
trap 'echo "I hate the kill command"' SIGTERM

# SIGQUIT only â†’ cleanup + exit
trap 'rm -f "$PIDFILE"; exit' SIGQUIT

while true
do
    echo "To infinity and beyond"
    sleep 2
done
