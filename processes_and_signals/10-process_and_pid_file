#!/usr/bin/env bash
# Script that writes its PID to a file and handles signals

PIDFILE="/var/run/myscript.pid"
echo "$$" > "$PIDFILE"

# SIGINT  → ctrl+c
trap 'echo "Y U no love me?!";' SIGINT

# SIGTERM → kill, pkill, kill PID
trap 'echo "I hate the kill command"' SIGTERM

# SIGQUIT and SIGTERM → clean up and exit
trap 'rm -f "$PIDFILE"; exit' SIGQUIT SIGTERM

while true
do
    echo "To infinity and beyond"
    sleep 2
done
