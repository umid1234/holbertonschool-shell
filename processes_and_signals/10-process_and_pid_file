#!/usr/bin/env bash
# Script that writes its PID to /var/run/myscript.pid and handles signals

PIDFILE="/var/run/myscript.pid"

# Write PID using tee (works in Holberton sandbox)
echo "$$" | sudo tee "$PIDFILE" > /dev/null

# SIGINT (Ctrl+C)
trap 'echo "Y U no love me?!";' SIGINT

# SIGTERM (kill)
trap 'echo "I hate the kill command"' SIGTERM

# SIGQUIT and SIGTERM â†’ cleanup and exit
trap 'rm -f "$PIDFILE"; exit' SIGQUIT SIGTERM

while true
do
    echo "To infinity and beyond"
    sleep 2
done
